<%= devise_error_messages! %>
<div class="profile card">
  <h3>Edit <%= resource_name.to_s.humanize %></h3>
  <%= link_to "Go back", :back, id: "back"%>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <h4 class="edit-section-title">General</h4>
    <div class="edit-section">
      <div class="field">
        <h6 class="field-title">name</h6>
        <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="field">
        <h6 class="field-title">email</h6>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <h6 class="field-title">picture link</h6>
        <%= f.text_field :picture, autofocus: true, autocomplete: "off" %>
      </div>
    </div>

    <h4 class="edit-section-title">Password</h4>
    <div class="edit-section">
      <div class="field">
        <h6 class="field-title">password</h6>
        <% if @minimum_password_length %>
          <h6 class="field-caption"><%= @minimum_password_length %> characters minimum</h6>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
          <br />
      </div>
      <div class="field">
        <h6 class="field-title">Password confirmation</h6>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <h4 class="edit-section-title">Submit</h4>
      <div class="edit-section">
        <div class="field">
          <h6 class="field-title">Type in current password to confirm changes</h6>
          <%= f.password_field :current_password, autocomplete: "off", required: true %>
          <%= f.submit "Update", id: "submit-edit-profile-button" %>
          <% end %>
        </div>
      </div>

      

    <h4 class="edit-section-title">Delete Account</h4>
    <div class="edit-section">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: "delete" %>
    </div>

</div>
